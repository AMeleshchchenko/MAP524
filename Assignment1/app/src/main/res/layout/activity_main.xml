<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/LightCoral"

    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_gravity="start"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/DarkGray"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
     />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:width="5dp"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/two"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/three"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>
        <Button
            android:id="@+id/addOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/four"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/five"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/six"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>
        <Button
            android:id="@+id/minusOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtract"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seven"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eight"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/nine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nine"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>
        <Button
            android:id="@+id/multiplyOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multiply"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/clearOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/LightCoral"
            android:onClick="clearOnClick"
            android:text="@string/clear"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/LightCoral"
            android:text="@string/zero"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/equalsOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/LightCoral"
            android:onClick="equalOnClick"
            android:text="@string/equals"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>
        <Button
            android:id="@+id/divideOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/divide"
            android:backgroundTint="@color/LightCoral"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/MediumSlateBlue"
            android:onClick="advanceOnClick"
            android:text="@string/advanced"
            android:textColor="@color/black"
            android:textSize="20sp"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/DarkGray"
        android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>